<Window x:Class="CrxMem.LuaEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CrxMem Lua Engine"
        Width="1000" Height="750"
        MinWidth="700" MinHeight="500"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Colors.xaml"/>
                <ResourceDictionary Source="Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Tab Item Style -->
            <Style x:Key="EditorTabItemStyle" TargetType="TabItem">
                <Setter Property="Background" Value="#21262D"/>
                <Setter Property="Foreground" Value="#8B949E"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}"
                                    BorderThickness="0,0,0,2" BorderBrush="Transparent"
                                    Margin="0,0,2,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter ContentSource="Header"
                                                      VerticalAlignment="Center"/>
                                    <Button x:Name="CloseBtn" Grid.Column="1"
                                            Content="x" FontSize="10"
                                            Background="Transparent" BorderThickness="0"
                                            Foreground="#6E7681" Cursor="Hand"
                                            Margin="8,0,0,0" Padding="4,0"
                                            Visibility="Collapsed"
                                            Click="CloseTab_Click"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#161B22"/>
                                    <Setter Property="Foreground" Value="#E6EDF3"/>
                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#58A6FF"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1F2428"/>
                                    <Setter TargetName="CloseBtn" Property="Visibility" Value="Visible"/>
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsSelected" Value="True"/>
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="CloseBtn" Property="Visibility" Value="Visible"/>
                                </MultiTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Main Container with Shadow -->
    <Border Background="{StaticResource BackgroundDarkBrush}"
            CornerRadius="8"
            Margin="8"
            BorderBrush="{StaticResource BorderDefaultBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>      <!-- Custom Title Bar -->
                <RowDefinition Height="Auto"/>    <!-- Toolbar -->
                <RowDefinition Height="*"/>       <!-- Main Content -->
                <RowDefinition Height="Auto"/>    <!-- Status Bar -->
            </Grid.RowDefinitions>

            <!-- ═══════════════════════════════════════════════════════════ -->
            <!-- CUSTOM TITLE BAR -->
            <!-- ═══════════════════════════════════════════════════════════ -->
            <Border Grid.Row="0"
                    Background="{StaticResource BackgroundCardBrush}"
                    CornerRadius="8,8,0,0">
                <Grid MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo & Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0" Background="Transparent">
                        <TextBlock Text="{}{}"
                                   Foreground="{StaticResource AccentBlueBrush}"
                                   FontWeight="Bold" FontSize="14"
                                   VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="CrxMem Lua Engine"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   FontSize="12"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="─" Click="Minimize_Click"
                                Style="{StaticResource IconButtonStyle}"
                                Width="40" Height="32" FontSize="12"/>
                        <Button x:Name="btnMaximize" Content="□" Click="Maximize_Click"
                                Style="{StaticResource IconButtonStyle}"
                                Width="40" Height="32" FontSize="10"/>
                        <Button Content="✕" Click="Close_Click"
                                Style="{StaticResource IconButtonStyle}"
                                Width="40" Height="32" FontSize="10"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════ -->
            <!-- TOOLBAR -->
            <!-- ═══════════════════════════════════════════════════════════ -->
            <Border Grid.Row="1"
                    Background="{StaticResource BackgroundCardBrush}"
                    Padding="8,6"
                    BorderBrush="{StaticResource BorderMutedBrush}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- File Operations -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="+ New" Click="NewScript_Click"
                                Style="{StaticResource ModernButtonStyle}"
                                Margin="0,0,4,0" Padding="10,5"/>
                        <Button Content="Open" Click="OpenScript_Click"
                                Style="{StaticResource ModernButtonStyle}"
                                Margin="0,0,4,0" Padding="10,5"/>
                        <Button Content="Save" Click="SaveScript_Click"
                                Style="{StaticResource ModernButtonStyle}"
                                Margin="0,0,4,0" Padding="10,5"/>

                        <!-- Separator -->
                        <Border Width="1" Background="{StaticResource BorderDefaultBrush}"
                                Margin="8,2"/>
                    </StackPanel>

                    <!-- Script Operations -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="btnExecute" Content="▶ Execute" Click="ExecuteScript_Click"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,4,0" Padding="12,5"/>
                        <Button x:Name="btnStop" Content="⬛ Stop" Click="StopScript_Click"
                                Style="{StaticResource ModernButtonStyle}"
                                Margin="0,0,4,0" Padding="10,5"/>

                        <!-- Separator -->
                        <Border Width="1" Background="{StaticResource BorderDefaultBrush}"
                                Margin="8,2"/>

                        <Button Content="Clear Output" Click="ClearOutput_Click"
                                Style="{StaticResource ModernButtonStyle}"
                                Padding="10,5"/>
                    </StackPanel>

                    <!-- Right side - Help -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button Content="API Help" Click="ShowApiHelp_Click"
                                Style="{StaticResource ModernButtonStyle}"
                                Padding="10,5"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════ -->
            <!-- MAIN CONTENT AREA -->
            <!-- ═══════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="2" Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" MinHeight="200"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="*" MinHeight="100"/>
                </Grid.RowDefinitions>

                <!-- EDITOR AREA -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Tab Header -->
                        <TabControl x:Name="tabScripts" Grid.Row="0" Grid.RowSpan="2"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0">
                            <TabControl.Resources>
                                <Style TargetType="TabItem" BasedOn="{StaticResource EditorTabItemStyle}"/>
                            </TabControl.Resources>
                        </TabControl>
                    </Grid>
                </Border>

                <!-- Splitter -->
                <GridSplitter Grid.Row="1"
                              Height="6"
                              HorizontalAlignment="Stretch"
                              Background="Transparent"
                              Cursor="SizeNS"/>

                <!-- OUTPUT AREA -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Output Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,6">
                            <TextBlock Text="OUTPUT"
                                       Style="{StaticResource SectionHeaderStyle}"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Ellipse x:Name="statusIndicator" Width="8" Height="8"
                                         Fill="{StaticResource AccentGreenBrush}"
                                         Margin="0,0,6,0"/>
                                <TextBlock x:Name="txtStatus" Text="Ready"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           FontSize="10"/>
                            </StackPanel>
                        </Grid>

                        <!-- Output Text -->
                        <Border Grid.Row="1"
                                Background="#0D1117"
                                BorderBrush="{StaticResource BorderDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Auto">
                                <TextBlock x:Name="txtOutput"
                                           FontFamily="Cascadia Code, Consolas"
                                           FontSize="11"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Padding="8"
                                           TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════ -->
            <!-- STATUS BAR -->
            <!-- ═══════════════════════════════════════════════════════════ -->
            <Border Grid.Row="3"
                    Background="{StaticResource BackgroundCardBrush}"
                    Padding="10,5"
                    CornerRadius="0,0,8,8">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="txtLineCol" Text="Ln 1, Col 1"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="10" Margin="0,0,20,0"/>
                        <TextBlock x:Name="txtEncoding" Text="UTF-8"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="10"/>
                    </StackPanel>
                    <TextBlock Text="Press F5 to Execute"
                               Foreground="{StaticResource TextMutedBrush}"
                               FontSize="10"
                               HorizontalAlignment="Right"/>

                    <!-- Resize Thumb -->
                    <Thumb HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Width="16" Height="16"
                           Margin="0,0,-5,-2"
                           Opacity="0.5"
                           Cursor="SizeNWSE"
                           DragDelta="ResizeThumb_DragDelta">
                        <Thumb.Template>
                            <ControlTemplate TargetType="Thumb">
                                <Grid Background="Transparent">
                                    <Path Data="M 0,12 L 12,0 M 4,12 L 12,4 M 8,12 L 12,8"
                                          Stroke="#888888"
                                          StrokeThickness="1"
                                          Stretch="None"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Bottom"
                                          Margin="2"/>
                                </Grid>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
