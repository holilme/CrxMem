<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- BACKGROUND COLORS -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#0D1117"/>
    <SolidColorBrush x:Key="BackgroundCardBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="BackgroundElevatedBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="BackgroundInputBrush" Color="#0D1117"/>
    <SolidColorBrush x:Key="BackgroundHoverBrush" Color="#1F2428"/>
    <SolidColorBrush x:Key="BackgroundPressedBrush" Color="#2D333B"/>
    
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- TEXT COLORS -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E6EDF3"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#8B949E"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#6E7681"/>
    
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- ACCENT COLORS -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <SolidColorBrush x:Key="AccentBlueBrush" Color="#58A6FF"/>
    <SolidColorBrush x:Key="AccentGreenBrush" Color="#3FB950"/>
    <SolidColorBrush x:Key="AccentRedBrush" Color="#F85149"/>
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="#D29922"/>
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="#A371F7"/>
    <SolidColorBrush x:Key="AccentCyanBrush" Color="#39C5CF"/>
    
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- BORDER COLORS -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="BorderMutedBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="#58A6FF"/>
    
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- SELECTION COLORS -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <SolidColorBrush x:Key="SelectionBrush" Color="#388BFD26"/>
    <SolidColorBrush x:Key="SelectionActiveBrush" Color="#58A6FF"/>
    
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- STATUS COLORS -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <SolidColorBrush x:Key="StatusSuccessBrush" Color="#3FB950"/>
    <SolidColorBrush x:Key="StatusSuccessBackgroundBrush" Color="#1C3428"/>
    <SolidColorBrush x:Key="StatusErrorBrush" Color="#F85149"/>
    <SolidColorBrush x:Key="StatusErrorBackgroundBrush" Color="#3D1C1C"/>
    <SolidColorBrush x:Key="StatusWarningBrush" Color="#D29922"/>
    <SolidColorBrush x:Key="StatusWarningBackgroundBrush" Color="#3D3418"/>
    <SolidColorBrush x:Key="StatusInfoBrush" Color="#58A6FF"/>
    
</ResourceDictionary>
